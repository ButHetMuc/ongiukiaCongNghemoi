<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <div class="container">
        <form id="formSubmit" action="/add" method="post"  enctype="multipart/form-data">
            <div class="row">
              <div class="col">
                <input id="id" type="text" class="form-control" name="id" placeholder="id">
              </div>
              <div class="col">
                <input id="name" type="text" class="form-control" name="name" placeholder="name">
              </div>
              <div class="col">
                <input id="quantity" type="text" class="form-control" name="quantity" placeholder="quantity">
              </div>
              <div class="col">
                <input id="image" type="text" class="form-control" name="image" placeholder="image">
              </div>
              <div class="col">
                <button id="btnAdd" type="button" class="btn btn-success">add</button>
              </div>
            </div>
        </form>
    </div>
    <p id="textError" class="text-danger"></p>
</body>
<script>
    
    const btnAdd = document.getElementById('btnAdd');
        btnAdd.addEventListener('click',()=>{
            
        const id = document.getElementById('id');
        const name = document.getElementById('name');
        const quantity = document.getElementById('quantity');
        const image = document.getElementById('image');
        
        const textError = document.getElementById('textError');

        if(id.value == ""){
            textError.innerText = 'id must be filled' ;
            return;
        }
        if(name.value == ""){
            textError.innerText = 'name must be filled';
            return;
        }
        if(quantity.value == ""){
            textError.innerText ='quantity must be filled';
            return;
        }
        if(image.value == "" || !image.value.includes('.png')){
            textError.innerText ='image stand by xx.png';
            return;
        }
        document.getElementById('formSubmit').submit();
        })

        
        
        
        
    
</script>
</html>